platform :ios, '13.0'

use_frameworks!
use_modular_headers!

target 'Runner' do
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'

  # Additional Flutter dependencies that require iOS pods
  # (Only needed if the plugin has a native iOS part)
  pod 'share_plus', :path => '../.symlinks/plugins/share_plus/ios'
  pod 'path_provider', :path => '../.symlinks/plugins/path_provider/ios'
  pod 'smooth_page_indicator', :path => '../.symlinks/plugins/smooth_page_indicator/ios'
  pod 'carousel_slider', :path => '../.symlinks/plugins/carousel_slider/ios'
  pod 'firebase_core', :path => '../.symlinks/plugins/firebase_core/ios'
  pod 'firebase_auth', :path => '../.symlinks/plugins/firebase_auth/ios'
  pod 'cloud_firestore', :path => '../.symlinks/plugins/cloud_firestore/ios'
  
  # If you add more plugins with native iOS code, add them here similarly

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Fix simulator build issues on M1/M2 Macs
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
